<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/search_result_list_fragment">

    <fragment
        android:id="@+id/search_result_list_fragment"
        android:name="jp.co.yumemi.android.code_check.SearchResultListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search_result_list">
        <action
            android:id="@+id/action_repositoriesFragment_to_repositoryFragment"
            app:destination="@id/search_result_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/search_result_detail_fragment"
        android:name="jp.co.yumemi.android.code_check.SearchResultDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search_result_list">
        <argument
            android:name="item"
            app:argType="jp.co.yumemi.android.code_check.Item" />
    </fragment>

</navigation>
